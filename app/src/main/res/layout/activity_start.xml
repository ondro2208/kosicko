<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg7"
    >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        >

        <TableRow>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/orb"
                android:layout_marginLeft="20sp"
                android:onClick="onOrbClicked"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="45sp"
                android:textColor="@color/sunflower"
                android:id="@+id/welcome"
                android:layout_marginTop="10sp"
                />

        </TableRow>

    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="20sp"
        >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/light_blue"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="10sp"
            android:onClick="onWeatherClicked"
            android:id="@+id/weather_button"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weather"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/weather_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/weather_icon"
                android:text="@string/weather"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/alizarin"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:onClick="onNewsClicked"
            android:id="@+id/news_button"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/news"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/news_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_icon"
                android:text="@string/news"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/nephritis"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="10sp"
            android:onClick="onEventsClicked"
            android:id="@+id/events_button"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/events"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/events_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/events_icon"
                android:text="@string/events"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/asphalt"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:onClick="onParkingClicked"
            android:id="@+id/parking_button"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/parking"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/parking_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/parking_icon"
                android:text="@string/news"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/wisteria"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="10sp"
            android:onClick="onSecondHandClicked"
            android:id="@+id/secondhand_button"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/secondhand"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/secondhand_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/secondhand_icon"
                android:text="@string/second_hand"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/carrot"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:onClick="onBeerClicked"
            android:id="@+id/beer_button"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/beer"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/beer_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/beer_icon"
                android:text="@string/beer"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
